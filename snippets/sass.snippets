#-----------------------------------------------------------
# Position
#-----------------------------------------------------------
snippet po
	position ${1}
snippet poa
	position: absolute
snippet por
	position: relative
snippet l
	left: ${1}px
snippet r
	right: ${1}px
#-----------------------------------------------------------
# Size
#-----------------------------------------------------------
snippet w
	width: ${1}px
snippet h
	height: ${1}px
#-----------------------------------------------------------
# Paddings
#-----------------------------------------------------------
snippet pa
	padding: ${1}px
snippet pat
	padding-top: ${1}px
snippet par
	padding-right: ${1}px
snippet pab
	padding-bottom: ${1}px
snippet pal
	padding-left: ${1}px
#-----------------------------------------------------------
# Margins
#-----------------------------------------------------------
snippet m
	margin: ${1}
snippet mt
	margin-top: ${1}px
snippet mr
	margin-right: ${1}px
snippet mb
	margin-bottom: ${1}px
snippet ml
	margin-left: ${1}px
#-----------------------------------------------------------
# Float
#-----------------------------------------------------------
snippet fl
	float: left
snippet fr
	float: right
snippet clb
	clear: both
#-----------------------------------------------------------
# Font
#-----------------------------------------------------------
snippet fs
	font-size: ${1}px
snippet co
	color: ${1}
snippet fw
	font-weight: ${1:bold}
snippet lh
	line-height: ${1}px
snippet tdn
	text-decoration: none
#-----------------------------------------------------------
# Display
#-----------------------------------------------------------
snippet d
	display: ${1}
snippet dn
	display: none
snippet db
	display: block
snippet di
	display: inline
snippet dib
	display: inline-block
#-----------------------------------------------------------
# Text aligments
#-----------------------------------------------------------
snippet ta
	text-align: ${1}
snippet tac
	text-align: center
snippet tal
	text-align: left
snippet tar
	text-align: right
#-----------------------------------------------------------
# Borders
#-----------------------------------------------------------
snippet bo
	border: ${1:1} ${2:solid} ${3:black}
snippet bot
	border-top: ${1:1} ${2:solid} ${3:black}
snippet bor
	border-right: ${1:1} ${2:solid} ${3:black}
snippet bob
	border-bottom: ${1:1} ${2:solid} ${3:black}
snippet bol
	border-left: ${1:1} ${2:solid} ${3:black}
#-----------------------------------------------------------
# Borders
#-----------------------------------------------------------
snippet ba
	background: ${1}
snippet bai
	backgroind-image: url('${1}')

